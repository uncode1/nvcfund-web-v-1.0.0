# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
FLASK_DEBUG=1

# Database Configuration
DATABASE_URL=sqlite:///nvcfund.db

# Security Configuration
SECRET_KEY=your-secret-key-here
SECURITY_PASSWORD_SALT=your-salt-here
JWT_SECRET_KEY=your-jwt-secret-key

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Flutterwave Configuration
FLUTTERWAVE_SECRET_KEY=your-flutterwave-secret-key
FLUTTERWAVE_PUBLIC_KEY=your-flutterwave-public-key

# SWIFT Configuration
SWIFT_API_KEY=your-swift-api-key

# Rate Limiting
RATELIMIT_STORAGE_URI=memory://
RATELIMIT_STRATEGY=fixed-window

# Allowed Currencies
ALLOWED_CURRENCIES=USD,EUR,GBP,NGN

# Blockchain Currencies
BLOCKCHAIN_CURRENCIES=BTC,ETH,USDT

# Conversion Limits
MAX_VOLUME_THRESHOLD=1000000
MAX_FREQUENCY_THRESHOLD=100
